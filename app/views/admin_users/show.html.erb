	<div id="contents">
		<h2>
			<%= image_tag 'head_logo.png' %>
		</h2>


			<div class="digg_pagination">
				<%= will_paginate @userinfo, previous_label: '&#8592; &nbsp;前', next_label: '次 &#8594;', inner_window: 1, outer_window: 0 %>
			</div>

		<table class="ta1" border="1" cellpadding="5" width="100%">
