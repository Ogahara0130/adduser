					<th class="abc1">
						お名前
					</th>
					<th class="abc1">
						メールアドレス
					</th>
				</tr>
				<% @userinfo.each do |user| %>
				<tr>
					<td class="abc1">
						<%= user.name_first%>
						<%= user.name_last%>
					</td>
					<td class="abc1">
						<%= user.mail_pc%>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

			<div class="digg_pagination">
				<%= will_paginate @userinfo, previous_label: '&#8592; &nbsp;前', next_label: '次 &#8594;', inner_window: 1, outer_window: 0 %>
			</div>
			<div class="digg_pagination">
